<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>Instagram Clone - WEB</title>

	<!-- JQuery -->
	<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

	<script>
		$(document).ready(() => {

			load_posts();

			$('#btn_incluir').click(() => {
				$('#container_timeline').hide();
				$('#container_form').show();
			});

			$('#btn-cancelar-publicacao').click(() => {
				$('#container_timeline').show();
				$('#container_form').hide();
				return false;
			});

			$('#btn-publicar').click(() => {

				const dados = new FormData(),
					arquivo = document.getElementById('arquivo').files[0];

				titulo = document.getElementById('titulo').value;
				dados.append('arquivo', arquivo);
				dados.append('titulo', titulo);

				const xhr = new XMLHttpRequest();

				//verificar mudanças de estado
				xhr.onreadystatechange = () => {
					if (xhr.readyState == 4) {
						const resposta = xhr.responseText;
						document.getElementById('mensagem').innerHTML = resposta;
					}
				}

				xhr.onload = () => {
					if (xhr.status === 200) {
						window.location.href = '/home';
					}
				}


				xhr.open('post', 'http://localhost:8080/api');
				xhr.send(dados);


			});

		});


		function load_posts() {
			const xhr = new XMLHttpRequest();
			xhr.open('get', 'http://localhost:8080/api');

			xhr.onload = () => {
				if (xhr.status === 200) {
					const data = $.parseJSON(xhr.responseText);

					for (let i in data) {

						$('#container_timeline').append(
							'<div class="publicacao">' +
							'<span class="titulo">' + data[i].titulo + '</span>' +
							'<img style="width: 688px; height: 400px" src="http://localhost:8080/imagens/' + data[i].url_imagem + '"/>' +
							'<div class="comentarios" id="comentarios_' + data[i]._id + '"></div>' +
							'<div class="comentar">' +
							'<input type="text" class="form-control input_comentario" id="post_' + data[i]._id +
							'" placeholder="Adicione um comentário.."/>' +
							'<button class="btn btn-default btn_postagem" value="' + data[i]._id + '" type="button">Comentar</button>' +
							'</div>' +
							'</div>'
						);

						if (data[i].comentarios != undefined) {
							const comentarios = data[i].comentarios;

							for (let j in comentarios) {
								$('#comentarios_' + data[i]._id).append(
									'<div class="txt_comentario">' +
										'<button type="button" value="'+ comentarios[j].id_comentario +'" class="btn btn-default btn_remover_postagem" data-toggle="tooltip" title="Remover comentário">X</button> ' +
										comentarios[j].comentario +
									'</div>'
								);
							}
						}
					}

					$('.btn_remover_postagem').click((thing) => {
						const id_comentario = thing.target.value;

						const xhr = new XMLHttpRequest();
						xhr.open('DELETE', 'http://localhost:8080/api/' + id_comentario);

						xhr.onload = () => {
							if (xhr.status === 200) {
								window.location.href = '/home';
							}
						}

						xhr.send();


					});

					$('.btn_postagem').click((thing) => {
						const id = thing.target.value,
							input_comentario = 'post_' + id,
							comentario = $('#' + input_comentario).val();

						const xhr = new XMLHttpRequest();
						xhr.open('PUT', 'http://localhost:8080/api/' + id);
						xhr.setRequestHeader('Content-Type', 'application/json');

						xhr.onload = () => {
							if (xhr.status === 200) {
								window.location.href = '/home';
							}
						}

						xhr.send(JSON.stringify({
							comentario: comentario
						}));

					});

				}
			}

			xhr.send();
		}
	</script>

</head>

<body>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="col-md-12">
				<div class="container-fluid">
					<img alt="Instagram Clone - Versão WEB" src="images/logo2.jpg" class="logo2">
					<img alt="Incluir" src="images/incluir.jpg" class="pull-right btn-incluir" id="btn_incluir">
				</div>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="col-md-2"></div>
		<div class="col-md-8" id="container_timeline"></div>

	</div>


	<div class="container" style="display:none" id="container_form">
		<div class="panel panel-default">

			<div class="panel-heading">
				<h4>Publicar uma foto</h4>
			</div>

			<div class="panel-body">
				<div class="form-group">
					<input type="file" name="arquivo" id="arquivo" class="form-control">
				</div>

				<div class="form-group">
					<input type="text" name="titulo" id="titulo" class="form-control" placeholder="Titulo" autocomplete="off">
				</div>

				<div class="form-group">
					<button class="btn btn-success" id="btn-publicar">Publicar</button>
					<button class="btn btn-danger" id="btn-cancelar-publicacao">Cancelar</button>
				</div>
				<div id="mensagem"></div>
			</div>
		</div>
</body>

</html>